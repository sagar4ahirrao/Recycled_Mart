<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recyledmart"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/recycle_education"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
        </activity>
        <activity
            android:name=".User"
            android:label="@string/title_activity_user" >
        </activity>
        <activity
            android:name=".HaltPage"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".RecycledMart"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".Pickup"
            android:label="@string/title_activity_pickup"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".Management"
            android:label="@string/title_activity_management"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".Manage"
            android:label="@string/title_activity_manage"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".Buy"
            android:label="@string/title_activity_buy"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".Add_Product"
            android:label="@string/title_activity_add__product"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".AddNew"
            android:label="@string/title_activity_add_new"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".Wallet"
            android:label="@string/title_activity_wallet"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".PickupDone"
            android:label="@string/title_activity_pickup_done"
            android:windowSoftInputMode="stateHidden" >
